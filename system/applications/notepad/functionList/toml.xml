<NotepadPlus>
	<functionList>
		<!-- ========================================= [ Initialisation File ] -->
		<!-- File format used for TOML                                         -->

		<parser
			displayName="TOML Table"
			id         ="toml_table"
			commentExpr="(?x)
							(?m-s:[#].*$)                                 # Single Line Comment
						"
		>
			<function
				mainExpr="^\h*[\[[\w\.&quot;\-&apos;]+\]"
			>
				<functionName>
					<nameExpr expr="[\w\.&quot;\-&apos;]+" />
				</functionName>
			</function>
		</parser>
	</functionList>
</NotepadPlus>