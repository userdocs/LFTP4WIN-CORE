{
    "extensions.ignoreRecommendations": false,
    "terminal.integrated.cwd": "${fileDirname}",
    "telemetry.telemetryLevel": "off",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.detectIndentation": false,
    "shellcheck.useWorkspaceRootAsCwd": true,
    "shellcheck.enableQuickFix": true,
    "workbench.colorTheme": "Aura Soft Dark",
    "git.enableSmartCommit": true,
    "terminal.integrated.defaultProfile.windows": "bash",
    "terminal.integrated.profiles.windows": {
        "PowerShell -NoProfile": {
            "source": "PowerShell",
            "args": [
                "-NoProfile"
            ]
        },
        "git bash": {
            "path": "${execPath}\\..\\..\\git\\bin\\bash.exe",
        },
        "bash": {
            "path": "${execPath}\\..\\..\\..\\bin\\bash.exe",
            "args": [
                "--login",
                "-i"
            ]
        }
    },
    "files.defaultLanguage": "shellscript",
    "[plaintext]": {
        "files.eol": "\n",
        "editor.tabSize": 4
    },
    "[shellscript]": {
        "files.eol": "\n",
        "editor.tabSize": 4,
        "editor.insertSpaces": false
    },
    "[batch]": {
        "files.eol": "\r\n"
    },
    "[markdown]": {
        "files.eol": "\n",
        "editor.tabSize": 4,
        "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    },
    "[yaml]": {
        "files.eol": "\n",
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[github-actions-workflow]": {
        "files.eol": "\n",
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[html]": {
        "files.eol": "\n",
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "security.workspace.trust.untrustedFiles": "open",
    "redhat.telemetry.enabled": false,
    "git.path": "${execPath}\\..\\..\\git\\bin\\git.exe",
    "workbench.editor.enablePreview": false,
    "terminal.integrated.enableMultiLinePasteWarning": "auto",
    // "shellformat.path": "C:\\bin\\shfmt.exe",
    "shellformat.flag": "-s -bn -ci -sr -i 0",
    "security.allowedUNCHosts": [
        "wsl.localhost"
    ],
    "cSpell.enabledFileTypes": {
        "shellscript": true
    },
}